<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id='biblioteca_comic_action' model='ir.actions.act_window'>
        <field name="name">comic de biblioteca</field>
        <field name="res_model">biblioteca.comic</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Mi biblioteca" id="biblioteca_base_menu" />
    <menuitem name="comics" id="biblioteca_comic_menu" parent="biblioteca_base_menu" action="biblioteca_comic_action"/>

    <!-- Form View -->
    <record id="biblioteca_comic_view_form" model="ir.ui.view">
        <field name="name">Formulario comic de la biblioteca</field>
        <field name="model">biblioteca.comic</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button type="object" name="do_archive" string="Toggle Archive"/>
                </header>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="author_ids" widget="many2many_tags"/>
                        <field name="state"/>
                        <field name="pages"/>
                        <field name="notes"/>
                        <field name="cost_price"/>
                        <field name="retail_price"/>
                        <field name="currency_id"/>
                        <field name="category_id"/>
                        <field name="active" readonly="1"/>
                    </group>
                    <group>
                        <field name="short_name"/>
                        <field name="publisher_id"/>
                        <field name="publisher_city"/>
                        <field name="date_release"/>
                        <field name="date_updated"/>
                        <field name="age_days"/>
                        <field name="cover" widget="image" class="oe_avatar"/>
                        <field name="reader_rating"/>
                        <field name="ref_doc_id"/>
                    </group>
                </group>
                <group>
                    <field name="description"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Tree(list) View -->
    <record id="biblioteca_comic_view_tree" model="ir.ui.view">
        <field name="name">Lista de comics de la biblioteca</field>
        <field name="model">biblioteca.comic</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_release"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="biblioteca_comic_view_search" model="ir.ui.view">
        <field name="name">BÃºsqueda de comics en la biblioteca</field>
        <field name="model">biblioteca.comic</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="author_ids"/>
                <filter string="Without Authors" name="without_author" domain="[('author_ids','=',False)]"/>
            </search>
        </field>
    </record>

</odoo>
