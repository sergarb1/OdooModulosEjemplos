<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- AcciÃ³n principal -->
    <record id="socio_action" model="ir.actions.act_window">
        <field name="name">Listado de socios</field>
        <field name="res_model">socio</field>
        <!-- ðŸ”§ En Odoo 14+ el tipo es 'list' en lugar de 'tree' -->
        <field name="view_mode">list,kanban,form</field>
    </record>

    <!-- MenÃºs -->
    <menuitem id="socios_base_menu" name="GestiÃ³n de socios" />
    <menuitem id="socio_menu" name="Socios" parent="socios_base_menu" action="socio_action" />

    <!-- Vista formulario -->
    <record id="socio_view_form" model="ir.ui.view">
        <field name="name">Formulario de socio</field>
        <field name="model">socio</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="num_socio"/>
                            <field name="nombre"/>
                            <field name="apellidos"/>
                        </group>
                        <group>
                            <field name="foto" widget="image" class="oe_avatar"/>
                            <field name="barcode_carnet" widget="image" class="oe_avatar"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista lista (antes 'tree') -->
    <record id="socio_view_list" model="ir.ui.view">
        <field name="name">Lista de socios</field>
        <field name="model">socio</field>
        <field name="arch" type="xml">
            <list>
                <field name="num_socio"/>
                <field name="nombre"/>
                <field name="apellidos"/>
            </list>
        </field>
    </record>

    <!-- Vista bÃºsqueda -->
    <record id="socio_view_search" model="ir.ui.view">
        <field name="name">BÃºsqueda de socios</field>
        <field name="model">socio</field>
        <field name="arch" type="xml">
            <search>
                <field name="num_socio"/>
                <field name="nombre"/>
                <field name="apellidos"/>
            </search>
        </field>
    </record>

    <!-- Vista kanban -->
    <record id="socio_view_kanban" model="ir.ui.view">
        <field name="name">Kanban de socios</field>
        <field name="model">socio</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="num_socio"/>
                <field name="nombre"/>
                <field name="apellidos"/>
                <field name="foto"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_image_inner_pic">
                            <field name="num_socio"/>
                            <field name="nombre"/>
                            <field name="apellidos"/>
                            <img alt="Avatar" t-att-src="kanban_image('socio', 'foto', record.id.raw_value)" />
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>
